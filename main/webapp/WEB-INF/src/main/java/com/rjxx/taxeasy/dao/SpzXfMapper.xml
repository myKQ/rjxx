<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rjxx.taxeasy.dao.SpzXfMapper">

    <select id="findOneByParams" parameterType="map" resultType="spzXf">
        select * from t_spz_xf where yxbz = '1'
        <if test="orderBy != null">
            order by #{orderBy}
        </if>
        limit 1
    </select>

    <select id="findAllByParams" parameterType="map" resultType="spzXf">
        select * from t_spz_xf where yxbz = '1'
        <if test="gsdm != null">
            and gsdm = #{gsdm}
        </if>
        <if test="spzid != null">
            and spzid = #{spzid}
        </if>
    </select>

    <select id="findByPage" parameterType="pagination" resultType="spzXf">
        select * from t_spz_xf where yxbz = '1'
        <if test="params.orderBy != null">
            order by #{params.orderBy}
        </if>
    </select>

</mapper>

